<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<h1 class="mt-3">All Campgrounds</h1>
<% for(let camp of camps.reverse()){ %>
<div class="card mb-3">
	<div class="row">
		<div class="col-md-4">
			<% if(camp.images.length){ %>
			<img
				src="<%= camp.images[0].url %>"
				alt=""
				class="img-fluid"
				crossorigin="anonymous"
			/>
			<% }else{ %>
			<img src="" alt="" class="img-fluid" />
			<% } %>
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title"><%= camp.title %></h5>
				<p class="card-text"><%= camp.description %></p>
				<p class="card-text">
					<small class="text-secondary"><%= camp.location %></small>
				</p>
				<a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View</a>
			</div>
		</div>
	</div>
</div>
<% } %>

<script>
	const mapboxToken = '<%-process.env.MAPBOX_TOKEN%>';
	const camps = {features : <%-JSON.stringify(camps)%>};
</script>
<script src="/JS/clusterMap.js"></script>
